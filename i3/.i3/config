# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

bar {
        status_command i3blocks -c ~/.i3/i3blocks.conf
	i3bar_command i3bar
        #tray_output primary
	position top
	#strip_workspace_numbers yes
	#height 25
	tray_padding 10
	tray_output none
	colors {
		background	$bg-color
		statusline	#E7E9DB
		separator	#776E71	

		# Type		   border  background font
		focused_workspace  $bg-color $bg-color $text-color
        	active_workspace   $bg-color $bg-color $inactive-text-color
        	inactive_workspace $bg-color $bg-color $inactive-text-color
	    	urgent_workspace   $text-color $text-color #ffffff
		
	}
}

# Multimedia Keys
# increase volume
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+ unmute
# decrease volume
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%- unmute
# mute volume
bindsym XF86AudioMute exec amixer -q set Master mute
# pause / play / next / previous
bindsym XF86AudioPlay exec mpc toggle
bindsym XF86AudioNext exec mpc next
bindsym XF86AudioPrev exec mpc previous

bindsym XF86MonBrightnessDown exec --no-startup-id sudo $HOME/bin/bright_down.sh
bindsym XF86MonBrightnessUp exec --no-startup-id sudo $HOME/bin/bright_up.sh

