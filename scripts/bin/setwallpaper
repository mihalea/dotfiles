#!/bin/bash

#Choose a random image from the path
path="$HOME/Nextcloud/Wallpapers"

#Writing to /tmp instead of /var/run to simplify deployment
pid_file="/tmp/setwallpaper.pid"

force=0
next=0

function next {
	if [ ! -z $pid ]; then
		kill -SIGUSR1 $pid 
	else
		echo "No instance is running"
	fi
}

function start_loop {
	echo "$$" > $pid_file

	#Idk why just trapping the signals is enough to trigger a new iteration in the loop below
	trap "echo 'Caught SIGUSR1'" SIGUSR1
	trap "exit" SIGINT
	while true; do
		set
		sleep 1m &
		wait
	done
}

function set {
	find $DIRECTORY/ -type f \( -iname '*.jpg' -o -iname '*.png' \) | shuf -n1 | xargs feh --bg-fill 2> /dev/null
}

while test $# -gt 0; do
	case "$1" in
		-f|--force)
			force=1
			shift
			;;
		-n|--next)
			next=1
			break
			;;
		-p|--path)
			shift
			if test $# -gt 0; then
				export DIRECTORY=$1
			else
				echo "No path specified"
			fi
			shift
			;;
		*)
			echo "Unexpected flag"
			;;
	esac
done

if [ -z $DIRECTORY ]; then
	DIRECTORY=$path
fi

if [ -s $pid_file ]; then
	read pid < $pid_file
fi

if [ $next = 1 ]; then
	next
else
	if [ ! -z $pid ]; then
		if [ $force = 1 ]; then
			kill -s 0 "$pid" 2> /dev/null && kill -s 9 "$pid" 2> /dev/null
			start_loop
		else
			echo "An instance is already running"
		fi
	else
		start_loop
	fi
fi

